  <body>
    <form action="/login" method="post">
      <h3>Log In to your account</h3>

      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input
          type="email"
          class="form-control"
          name="email"
          aria-describedby="emailHelp"
          id="email"
          required
        />
        <div id="emailHelp" class="form-text">
          We'll never share your email with anyone else.
        </div>
      </div>

      <div class="mb-3 w-60">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" name="password" id="pswd"  required/>
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
      <p class="form-text">
        Don't have an account?
        <a style="color: blue; text-decoration: underline" href="/register"
          >Sign Up</a
        >
      </p>
    </form>

    <div class="toggle-theme">
      <button id="toggle-btn">
        <i class="fa-sharp fa-regular fa-sun-bright"></i>
      </button>
      <span id="toggle-span">Switch to light theme</span>
    </div>

    <script src="/style.js"></script>
  </body>
